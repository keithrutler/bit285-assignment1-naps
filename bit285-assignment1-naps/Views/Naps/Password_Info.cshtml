@model bit285_assignment1_naps.Models.User
@inject bit285_assignment1_naps.Models.PasswordSuggestionService suggest
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "_Layout";
}

<h1>Password Information</h1>
<fieldset>
    <form action="/Naps/Password_Info" method="post">
        <div>
            <label asp-for="LastName">Last Name</label>
            <input placeholder="@Model.LastName" name="LastName" />
            <span asp-validation-for="LastName">* required</span>

        </div>
        <div>
            <label asp-for="BirthYear">Birth Year</label>
            <input placeholder="Birth Year" name="BirthYear" />
            <span asp-validation-for="BirthYear">* required</span>

        </div>
        <div>
            <label asp-for="FavColor">Favorite Color</label>
            <input placeholder="Blue" name="FavColor" />
            <span asp-validation-for="FavColor">* required</span>
        </div>

        <div>
            <input type="submit" value="Suggest Password" />
            <input type="button" onclick='history.go(0)' value="Reset" />
        </div>
    </form>
</fieldset>