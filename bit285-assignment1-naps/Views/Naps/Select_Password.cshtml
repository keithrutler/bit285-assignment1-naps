@model bit285_assignment1_naps.Models.User
@inject bit285_assignment1_naps.Models.PasswordSuggestionService suggest
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "_Layout";
}

<h1>Choose a Password</h1>
<fieldset>
    <form action="/Naps/Select_Password" method="post">
        <div>
            <label asp-for="Password">Possible Passwords</label>
            <input placeholder="@Model.Password" name="Password"/>
        </div>
        <div>
            <input type="submit" value="Create Account" />
            <input type="button" onclick='history.go(0)' value="Reset" />
        </div>
    </form>
</fieldset>